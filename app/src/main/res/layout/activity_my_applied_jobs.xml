<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Job.MyAppliedJobsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/jobsList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar_myappliedjobs" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_toolbar_myappliedjobs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00A7E1"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="My Applied Jobs"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/jobsList"
        app:layout_constraintEnd_toEndOf="@+id/top_toolbar_myappliedjobs"
        app:layout_constraintStart_toStartOf="@+id/top_toolbar_myappliedjobs"
        app:layout_constraintTop_toTopOf="@+id/top_toolbar_myappliedjobs" />

    <ImageView
        android:id="@+id/myappliedjobs_back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/top_toolbar_myappliedjobs"
        app:layout_constraintStart_toStartOf="@+id/top_toolbar_myappliedjobs"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />
</androidx.constraintlayout.widget.ConstraintLayout>
